<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CurrencyEditText">
        <attr name="currencySymbol" format="string"/>
        <attr name="localeTag" format="string"/>
        <attr name="useCurrencySymbolAsHint" format="boolean"/>
        <attr name="maxNumberOfDecimalDigits" format="integer"/>
        <attr name="viewsToHideIds" format="string" />
        <attr name="keepFocusOnKeyboardClose" format="boolean" />
    </declare-styleable>

</resources>